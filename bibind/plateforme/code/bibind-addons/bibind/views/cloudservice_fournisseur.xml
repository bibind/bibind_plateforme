              <record id="cloud_service_host_search_view" model="ir.ui.view">
            <field name="name">bibind.host.search</field>
            <field name="model">bibind.host</field>
            <field name="arch" type="xml">
                <search string="host">
                    <field name="name" string="Host" filter_domain="[('name','ilike',self)]"/>
                    <separator/>
                    <field name="group" filter_domain="[('group', 'child_of', self)]"/>
                    <group  expand='0' string='Group by...'>
                       <filter string='Group' domain="[]" context="{'group_by' : 'group'}"/>
                     </group>
                </search>
            </field>
        </record>
      
      
